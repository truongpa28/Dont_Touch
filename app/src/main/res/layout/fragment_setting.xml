<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium_500"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/setting"
            android:textColor="@color/black_1"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imgHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_help_info" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/sensitivity"
                android:textColor="@color/black_1"
                android:textSize="16sp" />


            <SeekBar
                android:id="@+id/sbSensitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginEnd="8dp"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/custom_thumb" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="28dp"
                android:background="@color/black_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/extension"
                android:textColor="@color/black_1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium_500"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/light_up_the_screen_when_searching"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <com.fasipan.dont.touch.custom.CustomSwitchImageView
                    android:id="@+id/swEnableLightUp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="26dp"
                android:background="@color/black_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_flash_alert" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semi_bold_600"
                    android:gravity="center_vertical|left"
                    android:includeFontPadding="false"
                    android:text="@string/enable_flash_alert"
                    android:textColor="@color/black_1"
                    android:textSize="16sp" />

                <com.fasipan.dont.touch.custom.CustomSwitchImageView
                    android:id="@+id/swEnableFlash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSelectFlash"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:includeFontPadding="false">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium_500"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/select_flash_type"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:scaleX="-1"
                    android:src="@drawable/ic_back" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/black_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:includeFontPadding="false"
                android:paddingHorizontal="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vibrate_1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semi_bold_600"
                    android:gravity="center_vertical|left"
                    android:includeFontPadding="false"
                    android:text="@string/enable_vibrate"
                    android:textColor="@color/black_1"
                    android:textSize="16sp" />

                <com.fasipan.dont.touch.custom.CustomSwitchImageView
                    android:id="@+id/swEnableVibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSelectVibrate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:includeFontPadding="false">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium_500"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/select_vibrate_type"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:scaleX="-1"
                    android:src="@drawable/ic_back" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/black_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/wallpapers"
                android:textColor="@color/black_1"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/llSelectWallpaper"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-12dp"
                android:fontFamily="@font/poppins_semi_bold_600"
                android:includeFontPadding="false">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium_500"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/set_don_t_touch_my_phone_wallpaper"
                    android:textColor="@color/black_1"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:scaleX="-1"
                    android:src="@drawable/ic_back" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>